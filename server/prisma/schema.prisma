generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     Role
}

model Appointment {
  id        String @id @default(uuid())
  patientId String
  doctorId  String
  status    String  // pending, confirmed, completed
}

enum Role {
  PATIENT
  DOCTOR
  ADMIN
}